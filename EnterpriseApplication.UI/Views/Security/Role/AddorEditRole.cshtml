@using EnterpriseApplication.Application.Common.Constant
@model EnterpriseApplication.Application.Security.ManageRoles.Queries.GetRoles.RoleDto
@{
    var isFieldToBeDisabled = (ViewBag.accessMode == AccessMode.VIEW || ViewBag.accessMode == AccessMode.DELETE);
    var actionMethod = string.Empty;
    if (ViewBag.accessMode == AccessMode.ADD) { actionMethod = "AddRole"; }
    else if (ViewBag.accessMode == AccessMode.EDIT) { actionMethod = "EditRole"; }
    else if (ViewBag.accessMode == AccessMode.DELETE) { actionMethod = "DeleteRole"; }

}


<div class="modal fade" id="RoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modelTitle">
                    @if (ViewBag.accessMode == AccessMode.DELETE)
                    {
                        @("Are you sure you want to delete this?")
                    }
                    else
                    {
                        @(ViewBag.accessMode + " Role")
                    }

                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@actionMethod" method="post">
                <div class="modal-body" id="modelContainer">

                    <div class="form-group">
                        <input type="hidden" asp-for="roleId" />
                        <label for="txtRole">Role Name</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                            <input type="text" asp-for="role" name="Role" class="form-control" id="txtRole" placeholder="Enter Role">
                        </div>
                    </div>
                </div>
                <div class="modal-footer" id="footerContainer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" data-save="modal">@ViewBag.accessMode</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/HTMLControlHandler.js"></script>
@if (isFieldToBeDisabled)
{
    <script>
        $(document).ready(function () {
            DisableAllControlsById("modelContainer");
        });
    </script>

}

